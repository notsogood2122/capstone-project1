model Announcement{
  id Int @id @default(autoincrement())
  title String
  description String
  date DateTime
}

//model Messages{}

model Events{
  id Int @id @default(autoincrement())
  title String
  description String
  startTime DateTime
  endTime DateTime
}

model Session{
  id Int @id @default(autoincrement())
  date DateTime
  day Day
  startTime DateTime
  endTime DateTime
}

enum UserSex{
  MALE
  FEMALE
}

enum Day{
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
}

