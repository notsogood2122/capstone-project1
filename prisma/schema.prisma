generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin{
  id String @id
  username String
  email String?
}

model Student{
  id String @id
  username String
  address String
  img String?
  sex UserSex
  createdAt DateTime @default(now())
  parentId String
  parent Parent @relation(fields:[parentId], references: [id])
}

model Therapist{
  id String @id
  username String
  email String? @unique
  address String
  phone String? @unique
  img String?
  sex UserSex
  createdAt DateTime @default(now())
}

model Parent{
  id String @id
  username String
  email String? @unique
  address String
  phone String @unique
  img String?
  students Student[]
}

